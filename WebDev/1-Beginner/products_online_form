    <script>
        function ValidateNo() {
            var phoneNo = document.getElementById('txtPhoneNo');
            if (phoneNo.value.length < 10 || phoneNo.value.length > 10) {
                alert("Mobile No. is not valid, Please Enter 10 Digit Mobile No.");
                return false;
            }
            return true;
        }

        function validateName() {
            var name = document.getElementById('name');
            if (name.value.length > 50) {
                alert("Maximum length accepted is only 50");
            }
        }

        function ValidatePrice() {
            var price = document.getElementById('price').value;
            var prize = parseInt(price);
            if (prize < 100 || prize > 9999) {
                alert("Enter price in range 100-9999");
                return false;
            } else {
                return true;
            }
        }

        function focusevent() {
            document.getElementById("price").style.background = "yellow";
        }

        function Total() {
            var quantity = document.forms['myownform']['quantity'].value;
            var prize = parseInt(document.getElementById('price').value);
            var total = quantity * prize;
            document.getElementById("tot_amount").innerHTML = total;
        }

        function ValidateEmail(email) {
            if (/^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/.test(myownform.email.value)) {
                return (true)
            }
            alert("You have entered an invalid email address!")
            return (false)

        }

        function buttonnow() {
            myform.but.value = "done";
            alert("succesfully done!");
        }
        $(document).ready(function() {
            $("h5").click(function() {
                alert("Purchased confirmed! Thank You!");
            });
        });
    </script>
