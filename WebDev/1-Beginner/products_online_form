            <h3>Product ID:</h3>
            <input type='text' name='firsthalf' id='firsthalf' maxlength="3" s ize="3" required pattern="[A-Z][A-Z][A-Z]">
            <input type='text' name='secondhalf' id='secondhalf' maxlength="6" size="6" required pattern="\d\d\d\d\d\d"><br>
            <h3>Product Name:</h3>
            <input type='text' name='name' id='name' required onchange="validateName()"><br>
            <h3>Quantity:</h3>
            <select name="quantity" id="quantity" oninput="Total()">
 <option value=" " disabled selected>Choose quantity</option>
 <option value="1 ">1</option>
