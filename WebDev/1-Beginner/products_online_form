            <h3>Price:</h3>
            <input type='number' name='price' id='price' onfocus='focusevent()' oninput="Total()" onchange='ValidatePrice()' required><br>
            <br>
            <h3>Date Of Purchase:</h3>
            <input type='date' name='DOP'>
            <br>
            <h3> Mobile:</h3>
            <input type='text' name='mobile' id='txtPhoneNo' onchange="ValidateNo()" required><br>
            <h3> Email:</h3>
            <input type='text' name='email' id='email' required onchange="ValidateEmail(email)"><br><br>
            <h2 style="color:lime;">Total Price in Rs.:<br> <span id="tot_amount">0</span></h> <br><br>
                <input type='submit' name='' style="background-color: lime;" onsubmit="buttonnow()" id="but"><br><br>

        </fieldset>
